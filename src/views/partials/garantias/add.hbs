<!-- Modal HTML -->
<div id="newGarantia" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">AGREGAR NUEVA GARANTIA</h5>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <form action="" id="form-newGarantia" method="post">
          <label> Datos Generales </label>
          <div class="form-group">
            <div class="row">
              <div class="col-md-8">
                <input type="text" class="form-control" name="id_articulo" placeholder="Código de Articulo" required>
              </div>
              <div class="col-md-4">
                <button class="btn btn-success btn-block">
                  <i class=" fas fa-search"></i> Buscar
                </button>
              </div>
            </div>

          </div>
          <div class="form-row">
            <div class="form-group col-md-12">
              <input type="text" class="form-control" placeholder="Articulo" disabled>
            </div>
          </div>
          <div class="form-row">

            {{!--- Codigo Empleado ¡¡¡¡Temporal!!!! --}}

            <input type="text" class="form-control" name="id_empleado" placeholder="Codigo" value="{{user.ID_EMPLEADO}}"
              hidden>

            <div class="form-group col-md-12">
              <input type="text" class="form-control" placeholder="Empleado" disabled>

            </div>

          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="precio"> Precio de Venta </label>
              <input id="precio" type="number" min="0" step="0.01" class="form-control" name="precio_unit"
                placeholder="Remuneracion" required>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-10">
              <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="verify-Password">
                <label class="custom-control-label" for="verify-Password">
                  Garantia Aplicada
                </label>
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary mt-4 float-right">
            <i class="fas fa-save"></i> Guardar
          </button>
        </form>
      </div>
    </div>
  </div>
</div>