<!-- Modal HTML -->
<div id="newTicket" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">AGREGAR NUEVO TICKET</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="/tickets/new" method="post" id="tickets_form">
                    <label> Generar nuevo Ticket </label>
                    <div class="form-group">
                        <input type="text" class="form-control" name="asunto" placeholder="Asunto" autofocus maxlength="15" required>
                        <div id="msg-valid" class="valid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="descripcion" id="descripcion" rows="5" maxlength="150" required placeholder="Descripcion"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary mt-4 float-right">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>