<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Listado General de Artículos</h6>
</div>
<div class="card-body">
    <div class="table-responsive">

        <table class="table table-bordered" id="dataItems" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Descripción</th>
                    <th>Talla</th>
                    <th>Marca</th>
                    <th>Linea</th>
                    <th>Color</th>
                    <th>Stock</th>
                    <th>Precio Unit.</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Descripción</th>
                    <th>Talla</th>
                    <th>Marca</th>
                    <th>Linea</th>
                    <th>Color</th>
                    <th>Stock</th>
                    <th>Precio Unit.</th>
                </tr>
            </tfoot>
            <tbody>
                {{#each articulos}}
                <tr>
                    <td> {{ID_ARTICULO}} </td>
                    <td> {{DESCRIPCION}} </td>
                    <td> {{TALLA}} </td>
                    <td> {{NOMBRE_MARCA}} </td>
                    <td> {{DESC_LINEA}} </td>
                    <td> {{DESC_COLOR}} </td>
                    <td> {{STOCK}} </td>
                    <td> L. {{PRECIO_UNIT}} </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
</div>